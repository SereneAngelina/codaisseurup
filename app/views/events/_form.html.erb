<%= form_for @room do |f| %>
<div class="form-group">
    <label>Event name</label>
    <%= f.text_field :event_name, placeholder: "Event name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Description</label>
    <%= f.text_area :description, rows: 5, placeholder: "Say something about your event", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Location</label>
    <%= f.select :location, [["Weesperplein", "Weesperplein"], ["Amsterdam", "Amsterdam"], ["The Hague", "The Hague"], ["Diemen", "Diemen"]], id: "location", prompt: "Select location", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Price</label>
    <div class="input-group">
      <div class="input-group-addon">â‚¬</div>
      <%= f.number_field :price, placeholder: "eg. 100", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
      <label>Capacity</label>
      <%= f.text_field :capacity, placeholder: "Event name", class: "form-control" %>
    </div>

    <label>Some snacks</label>

  <div class="form-group">
    <%= f.check_box :includes_food %> Food
  </div>
  <div class="form-group">
    <%= f.check_box :includes_drinks %> Drinks
  </div>
