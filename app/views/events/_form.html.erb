<%= form_for @event, html: { multipart: true} do |f| %>
<div class="form-group">
    <label>Event name</label>
    <%= f.text_field :name, placeholder: "Event name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Description</label>
    <%= f.text_area :description, rows: 5, placeholder: "Say something about your event", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Location</label>
    <%= f.text_field :location, placeholder: "location", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Price</label>
    <div class="input-group">

      <%= f.number_field :price, placeholder: "eg. 100", class: "form-control" %>
      <div class="input-group-addon">â‚¬</div>
    </div>
  </div>


  <div class="form-group">
      <label>Capacity</label>
      <%= f.select :capacity, options_for_select(10..100), placeholder: "capacity", class: "form-control" %>

    </div>

  <div class="form-group">
      <label>Start Date</label>
      <%= f.date_select :starts_at, class: "form-control" %>
    </div>

    <div class="form-group">
        <label>End Date</label>
        <%= f.date_select :ends_at, class: "form-control" %>
      </div>

      <label>Categories:</label>

<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
  <div class="form-group">
    <%= b.check_box(class: "check_box") %> <%= b.object.name %>
  </div>
<% end %>



   <label>Amenties</label>

  <div class="form-group">
    <%= f.check_box :includes_food %> Food
  </div>
  <div class="form-group">
    <%= f.check_box :includes_drinks %> Drinks
  </div>


  <label>Status</label>

    <div class="form-group">
      <%= f.check_box :active %> Active
    </div>

    <label>Photos</label>

<div class="form-group">
  <span class="btn btn-default">
    Upload Photos
    <%= file_field_tag "images[]", type: :file, multiple: true %>
  </span>
  <div id="photos">
  <%= render 'photos/list' %>
</div>

</div>


    <div class="actions">
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
  <% end %>
